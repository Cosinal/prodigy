{
    "title": "OperationsVPResult",
    "type": "object",
    "properties": {
      "agent": {
        "type": "string",
        "description": "The name or role of the agent producing this report."
      },
      "score": {
        "type": "number",
        "description": "Operational feasibility score from 0 to 10."
      },
      "summary": {
        "type": "string",
        "description": "Short narrative summary of operational assessment."
      },
      "details": {
        "type": "object",
        "properties": {
          "operational_feasibility": {
            "type": "object",
            "properties": {
              "team_requirements": {
                "type": "string",
                "description": "What team/skills needed to deliver and maintain"
              },
              "process_complexity": {
                "type": "string",
                "enum": ["Low", "Medium", "High", "Very High"],
                "description": "Overall process and coordination complexity"
              },
              "external_dependencies": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Critical external dependencies (APIs, vendors, partners)"
              },
              "delivery_blockers": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Potential blockers that could delay deployment"
              }
            },
            "required": ["team_requirements", "process_complexity", "external_dependencies", "delivery_blockers"]
          },
          "execution_plan": {
            "type": "object",
            "properties": {
              "milestones": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "phase": { "type": "string" },
                    "timeline": { "type": "string" },
                    "deliverables": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "required": ["phase", "timeline", "deliverables"]
                }
              },
              "resource_allocation": {
                "type": "string",
                "description": "How to allocate founder time, tools, and budget"
              }
            },
            "required": ["milestones", "resource_allocation"]
          },
          "scalability_and_maintenance": {
            "type": "object",
            "properties": {
              "post_launch_support_hours_per_week": {
                "type": "number",
                "description": "Estimated weekly hours for support and maintenance"
              },
              "iteration_cycle_weeks": {
                "type": "number",
                "description": "How often can you ship improvements"
              },
              "automation_opportunities": {
                "type": "array",
                "items": { "type": "string" },
                "description": "What can be automated to reduce manual work"
              },
              "failure_points": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Critical failure points in service continuity"
              }
            },
            "required": ["post_launch_support_hours_per_week", "iteration_cycle_weeks", "automation_opportunities", "failure_points"]
          },
          "quality_and_reliability": {
            "type": "object",
            "properties": {
              "delivery_kpis": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Key metrics to track delivery quality"
              },
              "qa_feedback_loops": {
                "type": "array",
                "items": { "type": "string" },
                "description": "How to ensure quality and gather feedback"
              },
              "definition_of_done": {
                "type": "string",
                "description": "What 'done well' means for MVP"
              }
            },
            "required": ["delivery_kpis", "qa_feedback_loops", "definition_of_done"]
          }
        },
        "required": ["operational_feasibility", "execution_plan", "scalability_and_maintenance", "quality_and_reliability"]
      },
      "top_risks": {
        "type": "array",
        "items": { "type": "string" }
      },
      "assumptions": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "required": ["agent", "score", "summary", "details", "top_risks", "assumptions"]
  }